<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
        <record id="view_order_form_blanket_order" model="ir.ui.view">
            <field name="name">sale.order.form.blanket.order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
               <field name="payment_term_id" position = 'after'>
                   	<field name = "blanket_order"/>
               </field>

                <div name="button_box" position= 'inside' >
                      <button name="%(action_generate_lines)d" type='action' string = 'Generate line'/>
                </div>

                <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
                    <field name = "qty_contract"/>
                </xpath>
            </field>
        </record>










    
  </data>
</odoo>